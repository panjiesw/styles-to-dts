{
	"compilerOptions": {
		"target": "es5",
    "module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
    "noUnusedLocals": true,
		"strictNullChecks": true,
		"outDir": "lib",
		"baseUrl": ".",
		"paths": {
			"*": [
				"*",
				"src/*"
			]
		}
	},
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false
}
